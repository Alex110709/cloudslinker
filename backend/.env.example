# Database Configuration
DATABASE_URL=postgresql://cloudslinker:cloudslinker123@localhost:5432/cloudslinker
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_EXPIRES_IN=86400

# OAuth Configuration
OAUTH_STATE_SECRET=your-oauth-state-secret-key

# PikPak OAuth Configuration
PIKPAK_CLIENT_ID=your-pikpak-client-id
PIKPAK_CLIENT_SECRET=your-pikpak-client-secret
PIKPAK_REDIRECT_URI=http://localhost:3001/api/auth/pikpak/callback
PIKPAK_API_ENDPOINT=https://api-drive.mypikpak.com

# Google Drive OAuth Configuration (optional)
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3001/api/auth/google-drive/callback

# OneDrive OAuth Configuration (optional)
ONEDRIVE_CLIENT_ID=your-onedrive-client-id
ONEDRIVE_CLIENT_SECRET=your-onedrive-client-secret
ONEDRIVE_REDIRECT_URI=http://localhost:3001/api/auth/onedrive/callback

# Dropbox OAuth Configuration (optional)
DROPBOX_CLIENT_ID=your-dropbox-client-id
DROPBOX_CLIENT_SECRET=your-dropbox-client-secret
DROPBOX_REDIRECT_URI=http://localhost:3001/api/auth/dropbox/callback

# File Transfer Configuration
MAX_FILE_SIZE=10737418240
MAX_CONCURRENT_TRANSFERS=5
TRANSFER_TIMEOUT=300000
CHUNK_SIZE=1048576

# Upload Configuration
UPLOAD_TMP_DIR=/tmp/cloudslinker-uploads
MAX_UPLOAD_SIZE=10737418240

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=3
QUEUE_MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/cloudslinker.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# WebSocket Configuration
WS_CORS_ORIGIN=http://localhost:3000

# Development Configuration
ENABLE_DEBUG_ROUTES=true
ENABLE_SWAGGER=true
SWAGGER_HOST=localhost:3001

# Production Security (set these in production)
HELMET_ENABLED=true
TRUST_PROXY=false

# Email Configuration (for notifications, optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@cloudslinker.com